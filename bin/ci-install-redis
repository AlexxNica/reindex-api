#!/bin/bash

set -e

source /etc/lsb-release
URL="deb http://ppa.launchpad.net/chris-lea/redis-server/ubuntu $DISTRIB_CODENAME main"
echo "$URL" | sudo tee /etc/apt/sources.list.d/redis.list
sudo apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv C7917B12
sudo apt-get update -o Dir::Etc::sourcelist="sources.list.d/redis.list" \
    -o Dir::Etc::sourceparts="-" -o APT::Get::List-Cleanup="0"
sudo apt-get install -y redis-server
